---
import '@fontsource/heebo/400.css';
import '@fontsource/heebo/600.css';
import '@fontsource/heebo/900.css';
import "@fontsource/heebo/variable.css";

import './global.scss';
import styles from './layout.module.scss';

const { title } = Astro.props;
---

<html lang="en">
<head>
    <title>{title || "Hi, I'm Nick Narsing."}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="I'm a full-stack web developer based in Portland, Oregon. I go by soren121 on the web.">
</head>
<body>
    <!-- Google tag (gtag.js) -->
    <script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-YJRZH1SS65" />
    <script type="text/partytown">
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-YJRZH1SS65');
    </script>

    <div class:list={['container', styles.layoutContainer]}>
        <slot />
    </div>
</body>
</html>
